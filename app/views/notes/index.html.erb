<%= render  'shared/header'%>

<% if logged_in? %>
  
  <% @notes.each do |note| %>
    <div class="border-bottom border-dark border-2">
      <a href="/show/<%= note.id %>">
        <% if note.image.attached? %>
          <!--画像が登録されている場合の処理-->
          <%= image_tag note.image ,class:"circle-image"%>
        <% else %>
          <!--画像が登録されていない場合の処理-->
          <%= image_tag 'note.jpg',class:"circle-image"%>
        <% end %>
        <h6 class="note_title">
          <%= note.title %>
        </h6>
      </a>
    </div>
  <% end %>
  




<% else %>
  <div class="d-grid gap-2 col-4 mx-auto text-center">
    <p>
      <h3>まだ登録済みでない方</h3>
      <a href="/logon" class="btn btn-primary btn-lg" role="button">ログオン</a> 
    </p>
    <p>
      <h3>登録済みの方</h3>
      <a href="/login" class="btn btn-secondary btn-lg" role="button">ログイン</a> 
    </p>
  </div>
<% end %>