<%= form_with model:@content do |f| %>
  <p>
  <%= f.label :title , "タイトル" %>
  <%= f.text_field :title , placeholder:"#{@content.title}" %>
  </p>

  <p>
  <%= f.label :contents , "ノート" %>
  <%= f.text_area :contents %>
  </p>

  <p>
  <%= f.submit %>
  </p>
  <% end %>

<% @notes.each do |note| %>
  <%= link_to "/show/#{note.id}" do %>
    <p>
    <%= note.title %>
    </p> 
  <% end %>
<% end %>