<%= render  'shared/header'%>

<% if flash[:error].present? %>
  <% flash[:error].each do |e| %>
    <li><%= e %></li>
  <% end %>
<% end %>

<div class="article">
  <div class= "side">
    <%= render  'shared/notes'%>
  </div>

  <div class="content">
    <%= form_with model:@content do |f| %>
      <p>
      <%= f.label :title , "タイトル" %>
      <%= f.text_field :title %>
      </p>

      <p class= "textarea">
      <%= f.label :contents , "ノート" %>
      <%= f.rich_text_area :contents %>
      </p>

      <p>
      <%= f.submit %>
      </p>
    <% end %>
    
  </div>
  
</div>

<%= link_to  "コンテンツ削除", "/contents/#{params[:id]}", method: :delete, data: {confirm: "Are you sure?"}%>


