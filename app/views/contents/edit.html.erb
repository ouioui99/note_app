<%= render  'shared/header'%>

<% if flash[:error].present? %>
  <% flash[:error].each do |e| %>
    <li><%= e %></li>
  <% end %>
<% end %>


<%= form_with model:@content do |f| %>
  <p>
  <%= f.label :title , "タイトル" %>
  <%= f.text_field :title %>
  </p>

  <p class= "textarea">
  <%= f.label :contents , "ノート" %>
  <%= f.rich_text_area :contents %>
  </p>

  <p>
  <%= f.submit %>
  </p>
<% end %>

<%= link_to  "コンテンツ削除", "/contents/#{params[:id]}", method: :delete, data: {confirm: "Are you sure?"}%>


<%= render  'shared/notes'%>